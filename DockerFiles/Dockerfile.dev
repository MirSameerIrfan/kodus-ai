ARG API_CLOUD_MODE=false

FROM node:22.14.0-slim

ARG API_CLOUD_MODE
ENV API_CLOUD_MODE=${API_CLOUD_MODE}

WORKDIR /usr/src/app
ENV NODE_ENV=development
ENV NODE_OPTIONS="--max-old-space-size=4096"

# Disable corepack to ensure we use the explicit yarn version if needed,
# though checking previous file shows we just need yarn global.
RUN corepack disable \
 && npm i -g yarn@1.22.22

# Install dependencies required for native modules and development tools
# python3, make, g++ are often needed for rebuilding bindings
RUN apt-get update && apt-get install -y --no-install-recommends \
      ca-certificates python3 make g++ procps git \
    && rm -rf /var/lib/apt/lists/*

# Install global development tools
RUN npm i -g yalc chokidar-cli nodemon

# Copy ONLY configuration files needed for the environment setup
COPY package.json yarn.lock ./
COPY nest-cli.json tsconfig*.json ./

# Setup Entrypoint
COPY --chmod=0755 docker/dev-entrypoint.sh /usr/local/bin/dev-entrypoint

ENTRYPOINT ["/usr/local/bin/dev-entrypoint"]
# Default command fallback
CMD ["yarn", "start:dev"]
