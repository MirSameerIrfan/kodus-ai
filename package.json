    "scripts": {
        "setup": "./scripts/setup.sh",
        "dev:health-check": "./scripts/health-check.sh",
        "dev:first-run": "yarn setup",
        "dev:stop": "yarn docker:down",
        "dev:restart": "yarn docker:down && yarn docker:start",
        "dev:logs": "yarn docker:logs",
        "dev:clean": "yarn docker:down && docker system prune -f && yarn docker:start",
        "migrate:dev": "yarn migration:run",
        "build": "nest build",
        "build:production": "nest build ",
        "build:fast": "NODE_OPTIONS='--max-old-space-size=8192' nest build --webpack",
        "build:incremental": "tsc --build --incremental",
        "build:webhooks": "nest build webhooks",
        "build:api": "nest build api",
        "build:worker": "nest build worker",
        "build:apps": "nest build webhooks && nest build api && nest build worker",
        "format": "prettier --write \"{apps,libs,core,shared,test}/**/*.ts\"",
        "start": "nest start --debug 0.0.0.0:9229",
        "start:dev": "nest start --watch --debug 0.0.0.0:9229",
        "start:dev:api": "nest start api --watch --debug 0.0.0.0:9229",
        "start:dev:webhooks": "nest start webhooks --watch --debug 0.0.0.0:9229",
        "start:dev:worker": "nest start worker --watch --debug 0.0.0.0:9229",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "start:webhooks": "cd apps/webhooks && node dist/main.js",
        "start:api": "cd apps/api && node dist/main.js",
        "start:worker": "cd apps/worker && node dist/main.js",
        "lint": "eslint \"{apps,libs,core,shared,test}/**/*.ts\" --fix",
        "test": "node --max-old-space-size=4096 ./node_modules/.bin/jest --forceExit --runInBand --detectOpenHandles --config jest.config.ts",
        "test:dev": "cross-env API_NODE_ENV=development jest --detectOpenHandles",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "TS_NODE_PROJECT=tsconfig.json node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "typeorm": "TS_NODE_PROJECT=tsconfig.json ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli",
        "migration:generate": "f() { API_PG_DB_HOST=localhost yarn typeorm migration:generate -p -d ./src/config/database/typeorm/ormconfig.ts \"./src/config/database/typeorm/migrations/$@\"; }; f",
        "migration:generate:internal": "f() { yarn typeorm migration:generate -p -d ./src/config/database/typeorm/ormconfig.ts \"./src/config/database/typeorm/migrations/$@\"; }; f",
        "migration:run": "API_PG_DB_HOST=localhost yarn typeorm migration:run -d ./src/config/database/typeorm/ormconfig.ts",
        "migration:run:internal": "yarn typeorm migration:run -d ./src/config/database/typeorm/ormconfig.ts",
        "migration:revert": "API_PG_DB_HOST=localhost yarn typeorm migration:revert -d ./src/config/database/typeorm/ormconfig.ts",
        "migration:revert:internal": "yarn typeorm migration:revert -d ./src/config/database/typeorm/ormconfig.ts",
        "migration:run:prod": "TS_NODE_PROJECT=tsconfig.json node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run -d ./dist/src/config/database/typeorm/ormconfig.js",
        "migration:revert:prod": "TS_NODE_PROJECT=tsconfig.json node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:revert -d ./dist/src/config/database/typeorm/ormconfig.js",
        "seed": "API_PG_DB_HOST=localhost TS_NODE_PROJECT=tsconfig.json ts-node -r tsconfig-paths/register src/config/database/typeorm/seed/seed.ts",
        "seed:internal": "TS_NODE_PROJECT=tsconfig.json ts-node -r tsconfig-paths/register src/config/database/typeorm/seed/seed.ts",
        "seed:enriched-prs": "ts-node -r tsconfig-paths/register scripts/seed-enriched-pull-requests.ts",
        "seed:prod": "TS_NODE_PROJECT=tsconfig.json node -r tsconfig-paths/register dist/src/config/database/typeorm/seed/seed.js",
        "script": "TS_NODE_PROJECT=tsconfig.json ts-node -r tsconfig-paths/register src/config/scripts/main.script.ts",
        "mcp:auth-check": "ts-node -r tsconfig-paths/register scripts/mcp-auth-check.ts",
        "docker:build": "yarn docker:cache:clean && docker compose -f docker-compose.dev.small.yml build",
        "docker:build:complete": "docker compose -f docker-compose.dev.yml build",
        "docker:build:webhooks": "docker compose -f docker-compose.dev.monorepo.yml build webhooks",
        "docker:build:api": "docker compose -f docker-compose.dev.monorepo.yml build api",
        "docker:build:worker": "docker compose -f docker-compose.dev.monorepo.yml build worker",
        "docker:build:monorepo": "docker compose -f docker-compose.dev.monorepo.yml build",
        "docker:cache:clean": "docker compose -f docker-compose.dev.small.yml down && docker volume rm kodus-ai_yalc_store kodus-ai_node_modules_cache || true",
        "docker:up": "docker compose -f docker-compose.dev.small.yml up --attach kodus-orchestrator",
        "docker:up:complete": "docker compose -f docker-compose.dev.yml up --attach kodus-orchestrator",
        "docker:up:webhooks": "docker compose -f docker-compose.dev.monorepo.yml up --attach webhooks",
        "docker:up:api": "docker compose -f docker-compose.dev.monorepo.yml up --attach api",
        "docker:up:worker": "docker compose -f docker-compose.dev.monorepo.yml up --attach worker",
        "docker:up:monorepo": "docker compose -f docker-compose.dev.monorepo.yml up",
        "docker:down": "docker compose -f docker-compose.dev.small.yml down",
        "docker:down:complete": "docker compose -f docker-compose.dev.yml down",
        "docker:down:monorepo": "docker compose -f docker-compose.dev.monorepo.yml down",
        "docker:start": "yarn docker:down && yarn docker:up",
        "docker:start:complete": "yarn docker:down:complete && yarn docker:up:complete",
        "docker:start:webhooks": "docker compose -f docker-compose.dev.monorepo.yml up webhooks db_postgres db_mongodb",
        "docker:start:api": "docker compose -f docker-compose.dev.monorepo.yml up api db_postgres db_mongodb",
        "docker:start:worker": "docker compose -f docker-compose.dev.monorepo.yml up worker db_postgres db_mongodb",
        "docker:start:monorepo": "docker compose -f docker-compose.dev.monorepo.yml up",
        "docker:start:env": "bash ./scripts/docker-start-env.sh",
        "docker:clean": "docker compose -f docker-compose.dev.small.yml down && docker volume rm kodus-ai_yalc_store kodus-ai_node_modules_cache || true",
        "docker:up:watch": "docker compose -f docker-compose.dev.small.yml up --watch",
        "docker:watch": "yarn docker:down && yarn docker:up -d",
        "docker:watch:complete": "yarn docker:down:complete && yarn docker:up:complete -d",
        "test:commit": "yarn docker:start -d && yarn test && yarn docker:down",
        "docker:logs": "docker logs -f kodus-orchestrator",
        "sentry:sourcemaps": "sentry-cli sourcemaps inject --org kodus --project kodus-orchestrator ./dist && sentry-cli sourcemaps upload --org kodus --project kodus-orchestrator ./dist",
        "prepare": "husky",
        "dev:yalc": "yarn dev:yalc:up && yarn dev:yalc:init && yarn dev:yalc:watch && yarn docker:logs",
        "dev:yalc:tunel": "yarn tunnel & yarn dev:yalc:up && yarn dev:yalc:init && yarn dev:yalc:watch && yarn docker:logs",
        "dev:yalc:up": "docker compose -f docker-compose.dev.small.yml up -d --build",
        "dev:yalc:init": "docker compose -f docker-compose.dev.small.yml exec kodus-orchestrator sh -lc \"cd packages/kodus-common && yarn install && yarn prepack && yalc publish --sig && cd ../kodus-flow && yarn install && yarn build && yalc publish --sig && cd /usr/src/app && yalc add @kodus/kodus-common && yalc add @kodus/flow && yarn install\"",
        "dev:yalc:watch": "docker compose -f docker-compose.dev.small.yml exec -d kodus-orchestrator sh -lc \"cd packages/kodus-common && (yarn prepack:watch &); (chokidar 'dist/**/*' -c 'yalc push --changed --sig' & ); cd ../kodus-flow && (yarn build:watch &); (chokidar 'dist/**/*' -c 'yalc push --changed --sig' & )\"",
        "yalc:update:flow": "docker compose -f docker-compose.dev.small.yml exec kodus-orchestrator sh -lc \"cd /usr/src/app && yalc update @kodus/flow && yarn install\"",
        "yalc:update:common": "docker compose -f docker-compose.dev.small.yml exec kodus-orchestrator sh -lc \"cd /usr/src/app && yalc update @kodus/kodus-common && yarn install\"",
        "yalc:update:all": "docker compose -f docker-compose.dev.small.yml exec kodus-orchestrator sh -lc \"cd /usr/src/app && yalc update @kodus/kodus-common && yalc update @kodus/flow && yarn install\"",
        "yalc:remove:flow": "docker compose -f docker-compose.dev.small.yml exec kodus-orchestrator sh -lc \"cd /usr/src/app && yalc remove @kodus/flow && yarn install\"",
        "yalc:remove:common": "docker compose -f docker-compose.dev.small.yml exec kodus-orchestrator sh -lc \"cd /usr/src/app && yalc remove @kodus/kodus-common && yarn install\"",
        "yalc:remove:all": "docker compose -f docker-compose.dev.small.yml exec kodus-orchestrator sh -lc \"cd /usr/src/app && yalc remove @kodus/kodus-common && yalc remove @kodus/flow && yarn install\"",
        "dev:yalc:clean": "docker compose -f docker-compose.dev.small.yml down && docker volume rm kodus-ai_yalc_store || true",
        "tunnel": "node scripts/tunnel.js",
        "tunnel:start": "yarn tunnel",
        "dev:with-tunnel": "yarn tunnel & yarn docker:start"
    },
