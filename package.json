    "jest": {
        "moduleNameMapper": {
            "^@/(.*)$": "<rootDir>/src/$1",
            "^@context-os-core/(.*)$": "<rootDir>/packages/kodus-flow/src/context/core/$1",
            "^test/mocks/(.*)$": "<rootDir>/test/mocks/$1"
