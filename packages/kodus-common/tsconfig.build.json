{
  "compilerOptions": {
    "declaration": true,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2022"
    ],
    "module": "commonjs",
    "target": "es2022",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "rootDir": "./src",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "noFallthroughCasesInSwitch": false,
    "importHelpers": true,
    "inlineSources": true,
    "paths": {
        "@/*": ["src/*"]
    }
  },
  "watchOptions": {
    "watchFile": "useFsEventsOnParentDirectory"
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test",
  ],
}
