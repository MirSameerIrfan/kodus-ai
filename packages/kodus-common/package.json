{
    "name": "@kodus/kodus-common",
    "author": "Kodus",
    "description": "Common types and utilities used across Kodus projects",
    "type": "commonjs",
    "repository": {
        "type": "git",
        "url": "https://github.com/kodustech/kodus-common"
    },
    "version": "1.0.0",
    "license": "AGPL-3.0-only",
    "scripts": {
        "prepack": "rm -rf dist && yarn generate-barrels && yarn types",
        "generate-barrels": "barrelsby --delete -c barrelsby.json",
        "types": "tsc -b . --force"
    },
    "files": [
        "dist/**/*"
    ],
    "exports": {
        "./types": "./dist/types/index.js",
        "./llm": "./dist/llm/index.js",
        "./package.json": "./package.json"
    },
    "typesVersions": {
        "*": {
            "types": [
                "./dist/types"
            ],
            "llm": [
                "./dist/llm"
            ]
        }
    },
    "dependencies": {
        "@langchain/anthropic": "^0.3.22",
        "@langchain/cohere": "^0.3.4",
        "@langchain/community": "^0.3.46",
        "@langchain/core": "^0.3.59",
        "@langchain/google-genai": "^0.2.12",
        "@langchain/google-vertexai": "^0.2.12",
        "@langchain/mongodb": "^0.1.0",
        "@langchain/openai": "^0.5.13",
        "@nestjs/core": "^11.1.3",
        "@nestjs/common": "^11.1.3",
        "pino": "^9.7.0",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.2",
        "tslib": "^2.8.1"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.28.0",
        "barrelsby": "^2.8.1",
        "eslint": "^9.28.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-prettier": "^5.4.1",
        "prettier": "^3.5.3",
        "ts-loader": "^9.5.2",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.34.0"
    },
    "peerDependencies": {}
}
