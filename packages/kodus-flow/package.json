{
    "name": "@kodus/flow",
    "version": "0.1.7",
    "description": "Kodus Flow - Framework para orquestração de agentes de IA",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "default": "./dist/index.js"
        },
        "./package.json": "./package.json"
    },
    "scripts": {
        "clean": "rm -rf dist",
        "build": "yarn clean && yarn build:esm && yarn build:types",
        "build:esm": "tsc --project tsconfig.build.json",
        "build:types": "tsc --project tsconfig.build.json --emitDeclarationOnly",
        "build:watch": "tsc --project tsconfig.build.json --watch",
        "dev": "tsc --watch",
        "dev:hot": "tsnd --respawn examples/echo-agent/run.ts",
        "lint": "eslint \"src/**/*.{ts,tsx}\" \"tests/**/*.{ts,tsx}\"",
        "lint:fix": "eslint \"src/**/*.{ts,tsx}\" \"tests/**/*.{ts,tsx}\" --fix",
        "format:fix": "prettier --write \"src/**/*.{ts,tsx,js,jsx}\" \"tests/**/*.{ts,tsx,js,jsx}\"",
        "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,mdx}\" --ignore-path .prettierignore",
        "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,mdx}\" --ignore-path .prettierignore",
        "test": "vitest",
        "test:run": "vitest run",
        "test:watch": "vitest watch",
        "test:coverage": "vitest run --coverage",
        "prepare": "[ -d .git ] && husky install || echo 'Skipping husky install: not a git repository'",
        "prepublishOnly": "yarn build && yarn lint",
        "publish:gar": "source scripts/refresh-token.sh && npm publish --registry=https://us-central1-npm.pkg.dev/$GAR_PROJECT_ID/kodus-pkg/ --access public",
        "refresh-token": "source scripts/refresh-token.sh",
        "publish:quick": "source scripts/refresh-token.sh && yarn build && yarn publish:gar",
        "yalc:publish": "yalc publish --sig",
        "yalc:push": "yalc push --changed --sig",
        "dev:yalc": "chokidar 'dist/**/*' -c 'yalc push --changed --sig'"
    },
    "keywords": [
        "ai",
        "agents",
        "workflow",
        "automation",
        "orchestration",
        "llm",
        "mcp",
        "model-context-protocol",
        "typescript",
        "nodejs",
        "kodus"
    ],
    "author": "Kodus Tech",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/kodustech/kodus-ai.git"
    },
    "bugs": {
        "url": "https://github.com/kodustech/kodus-ai/issues"
    },
    "homepage": "https://github.com/kodustech/kodus-ai#readme",
    "dependencies": {
        "@google/generative-ai": "^0.24.1",
        "@modelcontextprotocol/sdk": "^1.17.1",
        "ajv": "^8.17.1",
        "ajv-formats": "^3.0.1",
        "dotenv": "^17.2.1",
        "mongodb": "^6.18.0",
        "openai": "^5.12.0",
        "pino": "^9.7.0",
        "tslib": "^2.8.1",
        "zod": "^4.0.15",
        "zod-from-json-schema": "^0.4.2"
    },
    "devDependencies": {
        "@types/ajv": "^1.0.4",
        "@types/events": "^3.0.3",
        "@types/node": "^24.2.0",
        "@types/uuid": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^8.39.0",
        "@typescript-eslint/parser": "^8.39.0",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "eslint": "^9.32.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-prettier": "^5.5.4",
        "husky": "^9.1.7",
        "prettier": "^3.6.2",
        "reflect-metadata": "^0.2.2",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "tsup": "^8.5.0",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.39.0",
        "vite": "^7.0.6",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^3.2.4"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "sideEffects": [
        "**/register.js",
        "**/register.cjs",
        "**/register.ts"
    ],
    "funding": {
        "type": "github",
        "url": "https://github.com/kodustech/kodus-flow"
    },
    "files": [
        "dist/"
    ],
    "publishConfig": {
        "access": "public",
        "registry": "https://us-central1-npm.pkg.dev/$GAR_PROJECT_ID/kodus-pkg/"
    }
}
