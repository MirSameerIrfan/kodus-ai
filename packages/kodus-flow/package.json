{
    "name": "@kodus/flow",
    "version": "0.1.0",
    "description": "Kodus Flow - Framework para orquestração de agentes de IA",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "default": "./dist/index.js"
        },
        "./package.json": "./package.json"
    },
    "scripts": {
        "clean": "rm -rf dist",
        "build": "yarn clean && yarn build:esm && yarn build:types",
        "build:esm": "tsc --project tsconfig.build.json",
        "build:types": "tsc --project tsconfig.build.json --emitDeclarationOnly",
        "build:watch": "tsc --project tsconfig.build.json --watch",
        "dev": "tsc --watch",
        "dev:hot": "tsnd --respawn examples/echo-agent/run.ts",
        "lint": "eslint \"src/**/*.{ts,tsx}\" \"tests/**/*.{ts,tsx}\"",
        "lint:fix": "eslint \"src/**/*.{ts,tsx}\" \"tests/**/*.{ts,tsx}\" --fix",
        "format:fix": "prettier --write \"src/**/*.{ts,tsx,js,jsx}\" \"tests/**/*.{ts,tsx,js,jsx}\"",
        "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,mdx}\" --ignore-path .prettierignore",
        "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,mdx}\" --ignore-path .prettierignore",
        "test": "vitest",
        "test:run": "vitest run",
        "test:watch": "vitest watch",
        "test:coverage": "vitest run --coverage",
        "test:build": "node scripts/test-build.cjs",
        "pack:local": "yarn build && yarn test:run && yarn test:build && yarn pack",
        "pack:install": "yarn pack:local && yarn global add $(find . -name '*.tgz' | head -1)",
        "prepare": "[ -d .git ] && husky install || echo 'Skipping husky install: not a git repository'",
        "prepublishOnly": "yarn build && yarn test:run && yarn test:build && yarn lint"
    },
    "keywords": [
        "ai",
        "agents",
        "workflow",
        "automation",
        "orchestration",
        "llm",
        "mcp",
        "model-context-protocol",
        "typescript",
        "nodejs",
        "kodus"
    ],
    "author": "Kodus Tech",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/kodustech/kodus-flow.git"
    },
    "bugs": {
        "url": "https://github.com/kodustech/kodus-flow/issues"
    },
    "homepage": "https://github.com/kodustech/kodus-flow#readme",
    "dependencies": {
        "@google/generative-ai": "^0.24.1",
        "@modelcontextprotocol/sdk": "^1.15.0",
        "dotenv": "^17.1.0",
        "openai": "^5.8.3",
        "tslib": "^2.8.1",
        "zod": "^3.25.76",
        "zod-from-json-schema": "^0.4.2"
    },
    "devDependencies": {
        "@types/events": "^3.0.3",
        "@types/node": "^24.0.12",
        "@types/uuid": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^8.36.0",
        "@typescript-eslint/parser": "^8.36.0",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "eslint": "^9.30.1",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-prettier": "^5.5.1",
        "husky": "^9.1.7",
        "prettier": "^3.6.2",
        "reflect-metadata": "^0.2.2",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "tsup": "^8.5.0",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.36.0",
        "vite": "^7.0.3",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^3.2.4"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "sideEffects": [
        "**/register.js",
        "**/register.cjs",
        "**/register.ts"
    ],
    "funding": {
        "type": "github",
        "url": "https://github.com/kodustech/kodus-flow"
    },
    "files": [
        "dist/"
    ],
    "publishConfig": {
        "access": "public"
    }
}
