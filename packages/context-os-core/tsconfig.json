{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {}
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
