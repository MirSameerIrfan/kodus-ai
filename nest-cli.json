{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "monorepo": true,
    "compilerOptions": {
        "builder": "webpack",
        "webpackConfigPath": "webpack.config.js",
        "deleteOutDir": true,
        "webpack": true,
        "assets": [
            {
                "include": "shared/utils/translations/dictionaries/**",
                "outDir": "dist"
            }
        ],
        "watchAssets": true,
        "watchOptions": {
            "poll": 1000
        }
    },
    "projects": {
        "webhooks": {
            "type": "application",
            "root": "apps/webhooks",
            "entryFile": "main",
            "sourceRoot": "apps/webhooks/src",
            "compilerOptions": {
                "tsConfigPath": "apps/webhooks/tsconfig.json",
                "deleteOutDir": true
            }
        },
        "api": {
            "type": "application",
            "root": "apps/api",
            "entryFile": "main",
            "sourceRoot": "apps/api/src",
            "compilerOptions": {
                "tsConfigPath": "apps/api/tsconfig.json",
                "deleteOutDir": true
            }
        },
        "worker": {
            "type": "application",
            "root": "apps/worker",
            "entryFile": "main",
            "sourceRoot": "apps/worker/src",
            "compilerOptions": {
                "tsConfigPath": "apps/worker/tsconfig.json",
                "deleteOutDir": true
            }
        }
    }
}
