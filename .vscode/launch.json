{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Debug: API",
            "port": 9229,
            "address": "localhost",
            "timeout": 60000,
            "restart": true,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/usr/src/app",
            "sourceMaps": true,
            "outFiles": ["${workspaceFolder}/dist/apps/api/**/*.js"],
            "resolveSourceMapLocations": [
                "${workspaceFolder}/dist/**",
                "!**/node_modules/**"
            ],
            "sourceMapPathOverrides": {
                "webpack:///./*": "${workspaceFolder}/*",
                "webpack:///*": "${workspaceFolder}/*"
            },
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Debug: Webhooks",
            "port": 9230,
            "address": "localhost",
            "timeout": 60000,
            "restart": true,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/usr/src/app",
            "sourceMaps": true,
            "outFiles": ["${workspaceFolder}/dist/apps/webhooks/**/*.js"],
            "resolveSourceMapLocations": [
                "${workspaceFolder}/dist/**",
                "!**/node_modules/**"
            ],
            "sourceMapPathOverrides": {
                "webpack:///./*": "${workspaceFolder}/*",
                "webpack:///*": "${workspaceFolder}/*"
            },
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Debug: Worker",
            "port": 9231,
            "address": "localhost",
            "timeout": 60000,
            "restart": true,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/usr/src/app",
            "sourceMaps": true,
            "outFiles": ["${workspaceFolder}/dist/apps/worker/**/*.js"],
            "resolveSourceMapLocations": [
                "${workspaceFolder}/dist/**",
                "!**/node_modules/**"
            ],
            "sourceMapPathOverrides": {
                "webpack:///./*": "${workspaceFolder}/*",
                "webpack:///*": "${workspaceFolder}/*"
            },
            "skipFiles": ["<node_internals>/**"]
        }
    ],
    "compounds": [
        {
            "name": "Debug: All Services",
            "configurations": [
                "Debug: API",
                "Debug: Webhooks",
                "Debug: Worker"
            ]
        }
    ]
}
